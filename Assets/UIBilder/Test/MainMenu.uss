.buttonMenu {
    align-self: auto;
    position: relative;
    align-items: auto;
    font-size: 24px;
    color: rgb(255, 255, 255);
    text-shadow: -1px 1.9px 0 rgb(0, 0, 0);
    letter-spacing: 3px;
    background-color: rgb(70, 70, 70);
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    rotate: -10deg;
    border-top-width: 5px;
    border-right-width: 5px;
    border-bottom-width: 5px;
    border-left-width: 5px;
}

.TextMenu {
    -unity-text-align: upper-left;
    -unity-text-outline-width: 1px;
    color: rgb(195, 3, 160);
    text-shadow: -2px 2px 0 rgb(0, 0, 0);
    -unity-text-outline-color: rgb(0, 0, 0);
    font-size: 42px;
    -unity-font-style: bold;
    -unity-font: url("project://database/Assets/TextMesh%20Pro/Examples%20&%20Extras/Fonts/Roboto-Bold.ttf?fileID=12800000&guid=4beb055f07aaff244873dec698d0363e&type=3#Roboto-Bold");
    letter-spacing: 5px;
}

.buttonMenu:hover {
    align-self: auto;
    position: relative;
    align-items: auto;
    font-size: 24px;
    color: rgb(255, 255, 255);
    text-shadow: -1px 1.9px 0 rgb(0, 0, 0);
    letter-spacing: 3px;
    background-color: rgb(149, 149, 149);
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    rotate: -10deg;
    border-top-width: 5px;
    border-right-width: 5px;
    border-bottom-width: 5px;
    border-left-width: 5px;
    transition-duration: 700ms;
    scale: 1.1 1.1;
}

.buttonMenu:active {
    align-self: auto;
    position: relative;
    align-items: auto;
    font-size: 24px;
    color: rgb(39, 39, 39);
    text-shadow: -1px 1.9px 0 rgb(0, 0, 0);
    letter-spacing: 3px;
    background-color: rgb(41, 41, 41);
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    rotate: -10deg;
    border-top-width: 5px;
    border-right-width: 5px;
    border-bottom-width: 5px;
    border-left-width: 5px;
    transition-duration: 0ms;
}
